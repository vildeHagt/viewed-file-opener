{
  "name": "PR Text Generator",
  "description": "Generates fun PR-text",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/button.js",
        "scripts/generateText.js",
        "constants/text.js"
      ],
      "matches": ["https://www.github.com/*", "https://github.com/*"]
    }
  ],
  "host_permissions": ["https://www.github.com/*", "https://github.com/*"]
}
